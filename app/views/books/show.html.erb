<% content_for :title, @book.title %>

<div class="min-h-screen bg-gradient-to-br from-amber-50 to-orange-50 dark:from-gray-900 dark:to-gray-800" 
     data-controller="book-reader">
  
  <!-- Book Header -->
  <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
    <div class="container-xl mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <!-- Back Button -->
        <div class="flex items-center space-x-4">
          <%= link_to books_path, class: "btn-ghost text-sm" do %>
            <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
            返回书架
          <% end %>
          
          <div class="hidden md:block">
            <h1 class="text-xl font-bold text-gray-900 dark:text-gray-50"><%= @book.title %></h1>
            <% if @book.subtitle.present? %>
              <p class="text-sm text-gray-600 dark:text-gray-400"><%= @book.subtitle %></p>
            <% end %>
          </div>
        </div>

        <!-- Toggle Sidebar Button (Mobile) -->
        <button data-action="click->book-reader#toggleSidebar"
                class="md:hidden btn-ghost">
          <%= lucide_icon "menu", class: "w-5 h-5" %>
        </button>
      </div>
    </div>
  </div>

  <div class="container-xl mx-auto px-4 py-8">
    <div class="flex gap-8">
      
      <!-- Left Sidebar: Chapter Tree -->
      <aside class="w-80 flex-shrink-0 hidden md:block" 
             data-book-reader-target="sidebar">
        <div class="sticky top-8">
          <div class="card bg-white dark:bg-gray-800 shadow-lg">
            <div class="card-body p-6">
              <h2 class="text-lg font-bold text-gray-900 dark:text-gray-50 mb-4 flex items-center">
                <%= lucide_icon "list", class: "w-5 h-5 mr-2" %>
                目录
              </h2>
              
              <div class="space-y-2 max-h-[70vh] overflow-y-auto">
                <%= render partial: 'chapters/tree', locals: { chapters: @chapters } %>
              </div>
            </div>
          </div>

          <!-- Book Info Card -->
          <div class="card bg-white dark:bg-gray-800 shadow-lg mt-4">
            <div class="card-body p-6">
              <h3 class="font-bold text-gray-900 dark:text-gray-50 mb-3">书籍信息</h3>
              <dl class="space-y-2 text-sm">
                <% if @book.author.present? %>
                  <div class="flex justify-between">
                    <dt class="text-gray-600 dark:text-gray-400">作者</dt>
                    <dd class="font-medium text-gray-900 dark:text-gray-50"><%= @book.author %></dd>
                  </div>
                <% end %>
                <div class="flex justify-between">
                  <dt class="text-gray-600 dark:text-gray-400">章节数</dt>
                  <dd class="font-medium text-gray-900 dark:text-gray-50"><%= @book.chapters.count %></dd>
                </div>
                <div class="flex justify-between">
                  <dt class="text-gray-600 dark:text-gray-400">文章数</dt>
                  <dd class="font-medium text-gray-900 dark:text-gray-50"><%= @book.articles_count %></dd>
                </div>
                <div class="flex justify-between">
                  <dt class="text-gray-600 dark:text-gray-400">状态</dt>
                  <dd>
                    <span class="badge <%= @book.status == 'published' ? 'badge-success' : 'badge-warning' %>">
                      <%= @book.status == 'published' ? '已发布' : '草稿' %>
                    </span>
                  </dd>
                </div>
              </dl>
            </div>
          </div>
        </div>
      </aside>

      <!-- Mobile Sidebar Overlay -->
      <div class="fixed inset-0 bg-black bg-opacity-50 z-40 md:hidden hidden"
           data-book-reader-target="overlay"
           data-action="click->book-reader#closeSidebar">
      </div>

      <aside class="fixed left-0 top-0 bottom-0 w-80 bg-white dark:bg-gray-800 shadow-2xl z-50 transform -translate-x-full transition-transform duration-300 md:hidden overflow-y-auto"
             data-book-reader-target="mobileSidebar">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-lg font-bold text-gray-900 dark:text-gray-50">目录</h2>
            <button data-action="click->book-reader#closeSidebar" class="btn-ghost p-2">
              <%= lucide_icon "x", class: "w-5 h-5" %>
            </button>
          </div>
          
          <div class="space-y-2">
            <%= render partial: 'chapters/tree', locals: { chapters: @chapters } %>
          </div>
        </div>
      </aside>

      <!-- Right Content: Book Reader -->
      <main class="flex-1 min-w-0">
        <div class="card bg-white dark:bg-gray-800 shadow-2xl">
          <div class="relative" data-book-reader-target="bookContainer">
            
            <!-- Book Pages Container -->
            <div class="relative overflow-hidden" 
                 style="min-height: 600px;"
                 data-book-reader-target="pagesContainer">
              
              <!-- Pages will be loaded here dynamically -->
              <div class="flex items-center justify-center py-24 text-gray-500 dark:text-gray-400">
                <%= lucide_icon "book-open", class: "w-16 h-16 mb-4 mx-auto opacity-30" %>
                <p class="text-center">请从左侧目录选择章节开始阅读</p>
              </div>
              
            </div>

            <!-- Page Navigation Controls -->
            <div class="absolute bottom-8 left-0 right-0 flex justify-center items-center gap-4 pointer-events-none">
              <button data-action="click->book-reader#prevPage"
                      data-book-reader-target="prevBtn"
                      class="btn-primary pointer-events-auto opacity-0 transition-opacity"
                      style="display: none;">
                <%= lucide_icon "chevron-left", class: "w-5 h-5 mr-2" %>
                上一页
              </button>

              <div class="bg-white dark:bg-gray-800 px-4 py-2 rounded-full shadow-lg pointer-events-auto"
                   data-book-reader-target="pageInfo"
                   style="display: none;">
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                  第 <span data-book-reader-target="currentPage">1</span> 页 / 共 <span data-book-reader-target="totalPages">1</span> 页
                </span>
              </div>

              <button data-action="click->book-reader#nextPage"
                      data-book-reader-target="nextBtn"
                      class="btn-primary pointer-events-auto opacity-0 transition-opacity"
                      style="display: none;">
                下一页
                <%= lucide_icon "chevron-right", class: "w-5 h-5 ml-2" %>
              </button>
            </div>

          </div>
        </div>

        <!-- Chapter Description (if any) -->
        <% if @book.description.present? %>
          <div class="card bg-white dark:bg-gray-800 shadow-lg mt-8">
            <div class="card-body p-6">
              <h3 class="font-bold text-gray-900 dark:text-gray-50 mb-3">简介</h3>
              <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                <%= simple_format(@book.description) %>
              </p>
            </div>
          </div>
        <% end %>
      </main>

    </div>
  </div>
</div>
