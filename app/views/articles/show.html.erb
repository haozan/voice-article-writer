<div class="min-h-screen bg-background" data-controller="articles">
  <div class="container mx-auto px-4 py-8 max-w-5xl">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-primary mb-2">文章详情</h1>
        <div class="flex items-center gap-4 text-sm text-muted">
          <span><%= lucide_icon "calendar", class: "w-4 h-4 inline-block mr-1" %><%= @article.created_at.strftime('%Y-%m-%d %H:%M') %></span>
          <span class="badge <%= @article.status_badge_class %>"><%= @article.status_label %></span>
        </div>
      </div>
      <div class="flex gap-3">
        <a href="#" 
           class="btn-primary" 
           data-action="click->articles#confirmRegenerate"
           data-articles-article-id-value="<%= @article.id %>">
          <%= lucide_icon "refresh-cw", class: "w-4 h-4 inline-block mr-2" %>
          重新生成
        </a>
        <%= link_to root_path, class: "btn-secondary" do %>
          <%= lucide_icon "arrow-left", class: "w-4 h-4 inline-block mr-2" %>
          返回主页
        <% end %>
      </div>
    </div>

    <!-- Original Input -->
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-primary flex items-center gap-2">
        <div class="w-1 h-6 bg-orange-500"></div>
        原始输入
      </h2>
      <span class="text-sm text-muted">
        字数：<span class="font-semibold text-primary"><%= (@article.transcript || '').length %></span>
      </span>
    </div>
    <div class="card card-elevated p-6 mb-6 rounded-none">
      <div 
        class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
        data-controller="markdown-renderer"
        data-markdown-renderer-content-value="<%= (@article.transcript || '无内容').to_json %>"
      ></div>
    </div>

    <!-- Brainstorm Results -->
    <% if @article.has_brainstorm? %>
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-primary mb-4 flex items-center gap-2">
          <div class="w-1 h-6 bg-orange-500"></div>
          AI 脑爆结果
        </h2>
        <div class="space-y-4">
          <% if @article.brainstorm_grok.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <h3 class="font-bold text-primary mb-3 flex items-center gap-2">
                <%= image_tag "grok-logo.png", class: "w-5 h-5", alt: "Grok" %>
                Grok
                <% if @article.selected_model == 'grok' %>
                  <span class="badge badge-success text-xs">已选择</span>
                <% end %>
              </h3>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.brainstorm_grok.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.brainstorm_qwen.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <h3 class="font-bold text-primary mb-3 flex items-center gap-2">
                <%= image_tag "qwen-logo.png", class: "w-5 h-5", alt: "千问" %>
                千问
                <% if @article.selected_model == 'qwen' %>
                  <span class="badge badge-success text-xs">已选择</span>
                <% end %>
              </h3>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.brainstorm_qwen.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.brainstorm_deepseek.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <h3 class="font-bold text-primary mb-3 flex items-center gap-2">
                <%= image_tag "deepseek-logo.png", class: "w-5 h-5", alt: "DeepSeek" %>
                DeepSeek
                <% if @article.selected_model == 'deepseek' %>
                  <span class="badge badge-success text-xs">已选择</span>
                <% end %>
              </h3>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.brainstorm_deepseek.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.brainstorm_gemini.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <h3 class="font-bold text-primary mb-3 flex items-center gap-2">
                <%= image_tag "gemini-logo.png", class: "w-5 h-5", alt: "Gemini" %>
                Gemini
                <% if @article.selected_model == 'gemini' %>
                  <span class="badge badge-success text-xs">已选择</span>
                <% end %>
              </h3>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.brainstorm_gemini.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.brainstorm_doubao.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <h3 class="font-bold text-primary mb-3 flex items-center gap-2">
                <%= image_tag "doubao-logo.png", class: "w-5 h-5", alt: "豆包" %>
                豆包
                <% if @article.selected_model == 'doubao' %>
                  <span class="badge badge-success text-xs">已选择</span>
                <% end %>
              </h3>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.brainstorm_doubao.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.brainstorm_doubao.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <h3 class="font-bold text-primary mb-3 flex items-center gap-2">
                <%= lucide_icon "flame", class: "w-5 h-5" %>
                豆包
                <% if @article.selected_model == 'doubao' %>
                  <span class="badge badge-success text-xs">已选择</span>
                <% end %>
              </h3>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.brainstorm_doubao.to_json %>"
              ></div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Drafts (5 models) -->
    <% if @article.has_drafts? %>
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-primary mb-4 flex items-center gap-2">
          <div class="w-1 h-6 bg-orange-500"></div>
          AI 初稿生成
        </h2>
        <div class="space-y-4">
          <% if @article.draft_grok.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <div class="flex items-center justify-between mb-3">
                <h3 class="font-bold text-primary flex items-center gap-2">
                  <%= image_tag "grok-logo.png", class: "w-5 h-5", alt: "Grok" %>
                  Grok 初稿
                </h3>
                <span class="text-sm text-muted">
                  字数：<span class="font-semibold text-primary"><%= @article.draft_grok.length %></span>
                </span>
              </div>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.draft_grok.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.draft_qwen.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <div class="flex items-center justify-between mb-3">
                <h3 class="font-bold text-primary flex items-center gap-2">
                  <%= image_tag "qwen-logo.png", class: "w-5 h-5", alt: "千问" %>
                  千问初稿
                </h3>
                <span class="text-sm text-muted">
                  字数：<span class="font-semibold text-primary"><%= @article.draft_qwen.length %></span>
                </span>
              </div>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.draft_qwen.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.draft_deepseek.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <div class="flex items-center justify-between mb-3">
                <h3 class="font-bold text-primary flex items-center gap-2">
                  <%= image_tag "deepseek-logo.png", class: "w-5 h-5", alt: "DeepSeek" %>
                  DeepSeek 初稿
                </h3>
                <span class="text-sm text-muted">
                  字数：<span class="font-semibold text-primary"><%= @article.draft_deepseek.length %></span>
                </span>
              </div>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.draft_deepseek.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.draft_gemini.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <div class="flex items-center justify-between mb-3">
                <h3 class="font-bold text-primary flex items-center gap-2">
                  <%= image_tag "gemini-logo.png", class: "w-5 h-5", alt: "Gemini" %>
                  Gemini 初稿
                </h3>
                <span class="text-sm text-muted">
                  字数：<span class="font-semibold text-primary"><%= @article.draft_gemini.length %></span>
                </span>
              </div>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.draft_gemini.to_json %>"
              ></div>
            </div>
          <% end %>

          <% if @article.draft_doubao.present? %>
            <div class="card card-elevated p-5 rounded-none">
              <div class="flex items-center justify-between mb-3">
                <h3 class="font-bold text-primary flex items-center gap-2">
                  <%= image_tag "doubao-logo.png", class: "w-5 h-5", alt: "豆包" %>
                  豆包初稿
                </h3>
                <span class="text-sm text-muted">
                  字数：<span class="font-semibold text-primary"><%= @article.draft_doubao.length %></span>
                </span>
              </div>
              <div 
                class="text-secondary text-base leading-relaxed prose prose-sm max-w-none dark:prose-invert"
                data-controller="markdown-renderer"
                data-markdown-renderer-content-value="<%= @article.draft_doubao.to_json %>"
              ></div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>


  </div>
</div>
