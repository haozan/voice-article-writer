<% chapters.each do |chapter| %>
  <div class="chapter-item mb-2">
    <div class="flex items-center gap-2 p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
      <%= lucide_icon "folder", class: "w-4 h-4 text-blue-500 flex-shrink-0" %>
      <div class="flex-1 min-w-0">
        <span class="text-sm font-medium text-gray-900 dark:text-gray-50 truncate block">
          <%= chapter.title %>
        </span>
        <span class="text-xs text-gray-500 dark:text-gray-400">
          <%= chapter.articles.count %> 篇文章
        </span>
      </div>
      <div class="flex gap-1">
        <%= link_to edit_my_book_chapter_path(chapter.book, chapter), 
            class: "text-blue-600 hover:text-blue-700 p-1" do %>
          <%= lucide_icon "edit", class: "w-4 h-4" %>
        <% end %>
        <%= link_to my_book_chapter_path(chapter.book, chapter), 
            data: { turbo_method: :delete, turbo_confirm: "确定要删除该章节吗？" },
            class: "text-red-600 hover:text-red-700 p-1" do %>
          <%= lucide_icon "trash-2", class: "w-4 h-4" %>
        <% end %>
      </div>
    </div>
    
    <% if chapter.sub_chapters.any? %>
      <div class="ml-6 mt-1">
        <%= render partial: 'my_books/chapter_tree', locals: { chapters: chapter.sub_chapters.order(:position) } %>
      </div>
    <% end %>
  </div>
<% end %>
