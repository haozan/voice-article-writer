<% content_for :title, @book.title %>

<% 
  # Build all chapters list for article move dropdown
  all_chapters = []
  def flatten_chapters(chapters, all_chapters, level = 0)
    chapters.each do |chapter|
      all_chapters << { id: chapter.id, title: chapter.full_title, level: level }
      flatten_chapters(chapter.sub_chapters.ordered, all_chapters, level + 1) if chapter.sub_chapters.any?
    end
  end
  flatten_chapters(@book.chapters.root_level.ordered, all_chapters)
%>

<div class="min-h-screen bg-gradient-to-br from-amber-50 to-orange-50 dark:from-gray-900 dark:to-gray-800" 
     data-controller="book-chapters"
     data-book-chapters-chapters-value="<%= all_chapters.to_json %>">
  <div class="container-xl mx-auto px-4 py-8">
    
    <!-- Book Header -->
    <div class="card bg-white dark:bg-gray-800 shadow-lg mb-8 rounded-none">
      <div class="card-body p-8">
        <div class="flex flex-col md:flex-row gap-8">
          
          <!-- Book Cover -->
          <div class="w-24 md:w-32 flex-shrink-0">
            <div class="relative aspect-[3/4] bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 overflow-hidden rounded-none shadow-md">
              <div class="absolute inset-0 w-full h-full">
                <%= book_cover_svg(@book).html_safe %>
              </div>
            </div>
          </div>
          
          <!-- Book Info -->
          <div class="flex-1">
            <div class="flex items-start justify-between mb-4">
              <div>
                <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-50 mb-2">
                  <%= @book.title %>
                </h1>
                <% if @book.subtitle.present? %>
                  <p class="text-xl text-gray-600 dark:text-gray-400 mb-4">
                    <%= @book.subtitle %>
                  </p>
                <% end %>
              </div>
              
              <div class="flex gap-2">
                <%= link_to edit_my_book_path(@book), class: "btn-ghost" do %>
                  <%= lucide_icon "edit", class: "w-5 h-5 mr-2" %>
                  编辑
                <% end %>
                <%= link_to my_books_path, class: "btn-ghost" do %>
                  <%= lucide_icon "arrow-left", class: "w-5 h-5 mr-2" %>
                  返回
                <% end %>
              </div>
            </div>
            
            <div class="flex flex-wrap gap-4 mb-4">
              <% if @book.author.present? %>
                <div class="flex items-center text-gray-600 dark:text-gray-400">
                  <%= lucide_icon "user", class: "w-5 h-5 mr-2" %>
                  <span><%= @book.author %></span>
                </div>
              <% end %>
              
              <div class="flex items-center text-gray-600 dark:text-gray-400">
                <%= lucide_icon "folder", class: "w-5 h-5 mr-2" %>
                <span><%= @book.chapters.count %> 章节</span>
              </div>
              
              <div class="flex items-center text-gray-600 dark:text-gray-400">
                <%= lucide_icon "file-text", class: "w-5 h-5 mr-2" %>
                <span><%= @book.articles_count %> 篇文章</span>
              </div>
              
              <div class="flex items-center text-gray-600 dark:text-gray-400">
                <%= lucide_icon "type", class: "w-5 h-5 mr-2" %>
                <span><%= number_with_delimiter(@book.total_word_count) %> 字</span>
              </div>
              
              <span class="badge <%= @book.status == 'published' ? 'badge-success' : 'badge-warning' %>">
                <%= @book.status == 'published' ? '已发布' : '草稿' %>
              </span>
            </div>
            
            <% if @book.description.present? %>
              <div class="prose dark:prose-invert max-w-none">
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  <%= @book.description %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Table of Contents & Content -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
      
      <!-- Left: Table of Contents -->
      <div class="lg:col-span-1">
        <div class="card bg-white dark:bg-gray-800 shadow-lg sticky top-8 rounded-none">
          <div class="card-body p-6">
            <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-4 flex items-center gap-2">
              <%= lucide_icon "list", class: "w-6 h-6" %>
              目录
            </h2>
            
            <% if @book.chapters.any? %>
              <nav class="space-y-1 max-h-[70vh] overflow-y-auto">
                <%= render partial: 'my_books/toc_tree', locals: { chapters: @book.root_chapters } %>
              </nav>
            <% else %>
              <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                <%= lucide_icon "folder-open", class: "w-12 h-12 mx-auto mb-3 opacity-50" %>
                <p class="text-sm">暂无章节</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right: Content -->
      <div class="lg:col-span-3">
        <% if @book.chapters.any? %>
          <%= render partial: 'my_books/chapter_content', collection: @book.root_chapters, as: :chapter %>
        <% else %>
          <div class="card bg-white dark:bg-gray-800 shadow-lg rounded-none">
            <div class="card-body p-12 text-center">
              <%= lucide_icon "book-open", class: "w-16 h-16 mx-auto mb-4 text-gray-400" %>
              <h3 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-2">暂无内容</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-6">
                这本书还没有章节和文章
              </p>
              <%= link_to edit_my_book_path(@book), class: "btn-primary" do %>
                <%= lucide_icon "edit", class: "w-5 h-5 mr-2" %>
                去编辑
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

    </div>

  </div>
</div>
