<% content_for :title, @book.respond_to?(:name) ? @book.name : "Book" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_books_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
        Back to Books
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @book.respond_to?(:name) ? @book.name : "Book ##{@book.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_book_path(@book.id), class: "btn-primary" do %>
          <%= lucide_icon "pencil", class: "w-5 h-5 mr-2" %>
          Edit
        <% end %>

        <%= link_to admin_book_path(@book.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this book?" },
            class: "btn-danger" do %>
          <%= lucide_icon "trash-2", class: "w-5 h-5 mr-2" %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Book Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Title</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @book.title %></div>
        </div>

        <!-- Subtitle -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Subtitle</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @book.subtitle %></div>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@book.description) %>
          </div>
        </div>

        <!-- Author -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Author</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @book.author %></div>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Status</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @book.status %></div>
        </div>

        <!-- Published at -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Published at</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @book.published_at&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Pinned -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Pinned</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @book.pinned ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @book.pinned ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Slug -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Slug</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @book.slug %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @book.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @book.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@book.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @book.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@book.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
