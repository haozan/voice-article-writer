<% content_for :title, "Writing tips" %>

<div class="container-xl">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Writing tips Management</h1>
    <%= link_to new_admin_writing_tip_path, class: "btn-primary" do %>
      <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
      New Writing tip
    <% end %>
  </div>

  <!-- Writing tips Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <% if @writing_tips.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Content</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Active</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Position</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created At</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-gray-50 dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <% @writing_tips.each do |writing_tip| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900 dark:text-gray-100"><%= writing_tip.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap max-w-xs text-sm text-gray-900 dark:text-gray-100">
                    <%= link_to truncate(writing_tip.content, length: 100), admin_writing_tip_path(writing_tip.id), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= if writing_tip.active
         content_tag(:span, 'Yes', class: 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800')
       else
         content_tag(:span, 'No', class: 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800')
       end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= writing_tip.position %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= writing_tip.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                    <div class="flex justify-center space-x-2">
                      <%= link_to admin_writing_tip_path(writing_tip.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "eye", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to edit_admin_writing_tip_path(writing_tip.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "pencil", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to admin_writing_tip_path(writing_tip.id), method: :delete,
                          data: { confirm: "Are you sure you want to delete this writing_tip?" },
                          class: "p-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hover:bg-red-100 dark:hover:bg-red-900 rounded transition-colors" do %>
                        <%= lucide_icon "trash-2", class: "w-4 h-4" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
            <%= lucide_icon "file-text", class: "w-12 h-12 text-gray-400" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-2">No writing_tips</h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6">Get started by creating a new writing_tip.</p>
          <%= link_to new_admin_writing_tip_path, class: "btn-primary" do %>
            <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
            New Writing tip
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pagination -->
  <% if @writing_tips.respond_to?(:current_page) %>
    <div class="mt-6">
      <%= paginate @writing_tips %>
    </div>
  <% end %>
</div>