<!-- User dropdown menu - Powered by dropdown_controller.ts -->
<div data-controller="dropdown" class="relative">
  <!-- Dropdown trigger button -->
  <button type="button"
          data-dropdown-target="trigger"
          data-action="click->dropdown#toggle"
          class="w-full md:w-auto flex items-center justify-start space-x-2 px-3 py-2 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
    <!-- User avatar -->
    <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-gray-50 text-sm font-medium">
      <%= current_user.name&.first&.upcase || current_user.email&.first&.upcase || 'U' %>
    </div>
    <!-- User name -->
    <span class="text-sm font-medium flex-1 text-left">
      <%= current_user.name || current_user.email&.split('@')&.first %>
    </span>
    <!-- Dropdown arrow -->
    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
  </button>

  <!-- Dropdown menu (hidden by default, controlled by dropdown_controller) -->
  <div data-dropdown-target="menu"
       class="hidden absolute right-0 mt-2 w-56 bg-gray-50 dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-50 overflow-hidden">
    <!-- 用户信息头部 -->
    <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700">
      <p class="text-sm font-medium text-gray-900 dark:text-gray-50">
        <%= current_user.name || '用户' %>
      </p>
      <p class="text-xs text-gray-500 dark:text-gray-400 truncate">
        <%= current_user.email %>
      </p>
    </div>

    <!-- 分割线 -->
    <div class="border-t border-gray-200 dark:border-gray-700"></div>

    <!-- 功能入口 -->
    <div class="py-1">
      <%= link_to root_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
        </svg>
        首页
      <% end %>

      <%= link_to write_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
        </svg>
        开始创作
      <% end %>

      <%= link_to my_books_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
        </svg>
        我的书籍
      <% end %>
    </div>

    <!-- 账户管理 -->
    <div class="py-1">
      <%= link_to profile_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
        </svg>
        个人资料
      <% end %>

      <%= link_to devices_session_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M3 12v3c0 1.657 3.134 3 7 3s7-1.343 7-3v-3c0 1.657-3.134 3-7 3s-7-1.343-7-3z"/>
          <path d="M3 7v3c0 1.657 3.134 3 7 3s7-1.343 7-3V7c0 1.657-3.134 3-7 3S3 8.657 3 7z"/>
          <path d="M17 5c0 1.657-3.134 3-7 3S3 6.657 3 5s3.134-3 7-3 7 1.343 7 3z"/>
        </svg>
        设备管理
      <% end %>
    </div>

    <!-- 登出 -->
    <div class="border-t border-gray-200 dark:border-gray-700">
      <%= button_to sign_out_path, method: :delete, class: "flex items-center w-full text-left px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"/>
        </svg>
        登出
      <% end %>
    </div>
  </div>
</div>
